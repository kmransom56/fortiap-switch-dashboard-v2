# Unified Configuration Management
# Shared between Node.js dashboard and Python discovery services

# FortiGate Connection Settings
FORTIGATE_HOST=192.168.1.99
FORTIGATE_PORT=443
FORTIGATE_USERNAME=admin
FORTIGATE_PASSWORD=your_password_here
VERIFY_SSL=false

# Service Ports Configuration
SHARED_API_PORT=13001
PYTHON_API_PORT=13002
DASHBOARD_PORT=13000
BABYLON_3D_PORT=3001

# Cache Configuration
CACHE_TTL=300000
CACHE_CLEANUP_INTERVAL=60000

# Visualization Settings
MAX_SWITCHES=50
MAX_ACCESS_POINTS=100
MAX_ENDPOINTS=500

# 3D Model Configuration
THREE_D_MODEL_PATH=./babylon_3d/babylon_app/network-visualizer/assets/models
AUTHENTIC_MODELS=true
MODEL_CACHE_ENABLED=true

# Discovery Settings
AUTO_REFRESH_INTERVAL=300
DISCOVERY_TIMEOUT=30
MAX_RETRY_ATTEMPTS=3

# Output Configuration
TOPOLOGY_FILE=unified_topology.json
BABYLON_FILE=babylon_topology.json
DASHBOARD_DATA_FILE=dashboard_data.json

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Security Settings
ALLOWED_ORIGINS=http://localhost:13000,http://localhost:3001
API_KEY_REQUIRED=false
SESSION_TIMEOUT=3600

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/unified-api.log
LOG_ROTATION=daily

# Performance Settings
COMPRESSION_LEVEL=6
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Settings
NODE_ENV=development
DEBUG_MODE=false
HOT_RELOAD=true

# Python Service Settings
PYTHON_SERVICE_TIMEOUT=30
PYTHON_CONCURRENT_REQUESTS=5
PYTHON_MEMORY_LIMIT=512MB

# Dashboard Integration
ENABLE_3D_TOPOLOGY=true
ENABLE_VSS_CONVERSION=true
ENABLE_LIVE_DISCOVERY=true
DASHBOARD_THEME=dark

# Database/Storage (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
DATABASE_URL=sqlite:./data/unified.db
