# FortiGate Connection Settings
# Copy this file to .env and update with your credentials

# FortiGate IP address or hostname
FORTIGATE_HOST=192.168.1.1

# FortiGate HTTPS port (default: 443)
FORTIGATE_PORT=443

# FortiGate administrator username
FORTIGATE_USERNAME=admin

# FortiGate administrator password
FORTIGATE_PASSWORD=your_password_here

# SSL verification (true/false)
FORTIGATE_VERIFY_SSL=false

# Output files
TOPOLOGY_FILE=fortinet_topology.json
BABYLON_FILE=babylon_topology.json

# Device limits for large networks
MAX_SWITCHES=10
MAX_ACCESS_POINTS=20
MAX_ENDPOINTS=50

# Auto-refresh interval in seconds (0 = disabled)
AUTO_REFRESH_INTERVAL=300
